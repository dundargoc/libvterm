local vt=init()
vterm.vterm_set_utf8(vt, true)
local state = wantstate(vt, "")

-- Reset
push "\x1b[m"
  ?pen bold = off
  ?pen underline = 0
  ?pen italic = off
  ?pen blink = off
  ?pen reverse = off
  ?pen font = 0
  ?pen foreground = rgb(240,240,240,is_default_fg)
  ?pen background = rgb(0,0,0,is_default_bg)

-- Bold
push "\x1b[1m"
  ?pen bold = on
push "\x1b[22m"
  ?pen bold = off
push "\x1b[1m\x1b[m"
  ?pen bold = off

-- Underline
push "\x1b[4m"
  ?pen underline = 1
push "\x1b[21m"
  ?pen underline = 2
push "\x1b[24m"
  ?pen underline = 0
push "\x1b[4m\x1b[4:0m"
  ?pen underline = 0
push "\x1b[4:1m"
  ?pen underline = 1
push "\x1b[4:2m"
  ?pen underline = 2
push "\x1b[4:3m"
  ?pen underline = 3
push "\x1b[4m\x1b[m"
  ?pen underline = 0

-- Italic
push "\x1b[3m"
  ?pen italic = on
push "\x1b[23m"
  ?pen italic = off
push "\x1b[3m\x1b[m"
  ?pen italic = off

-- Blink
push "\x1b[5m"
  ?pen blink = on
push "\x1b[25m"
  ?pen blink = off
push "\x1b[5m\x1b[m"
  ?pen blink = off

-- Reverse
push "\x1b[7m"
  ?pen reverse = on
push "\x1b[27m"
  ?pen reverse = off
push "\x1b[7m\x1b[m"
  ?pen reverse = off

-- Font Selection
push "\x1b[11m"
  ?pen font = 1
push "\x1b[19m"
  ?pen font = 9
push "\x1b[10m"
  ?pen font = 0
push "\x1b[11m\x1b[m"
  ?pen font = 0

-- Foreground
push "\x1b[31m"
  ?pen foreground = idx(1)
push "\x1b[32m"
  ?pen foreground = idx(2)
push "\x1b[34m"
  ?pen foreground = idx(4)
push "\x1b[91m"
  ?pen foreground = idx(9)
push "\x1b[38:2:10:20:30m"
  ?pen foreground = rgb(10,20,30)
push "\x1b[38:5:1m"
  ?pen foreground = idx(1)
push "\x1b[39m"
  ?pen foreground = rgb(240,240,240,is_default_fg)

-- Background
push "\x1b[41m"
  ?pen background = idx(1)
push "\x1b[42m"
  ?pen background = idx(2)
push "\x1b[44m"
  ?pen background = idx(4)
push "\x1b[101m"
  ?pen background = idx(9)
push "\x1b[48:2:10:20:30m"
  ?pen background = rgb(10,20,30)
push "\x1b[48:5:1m"
  ?pen background = idx(1)
push "\x1b[49m"
  ?pen background = rgb(0,0,0,is_default_bg)

-- Bold+ANSI colour == highbright
push "\x1b[m\x1b[1;37m"
  ?pen bold = on
  ?pen foreground = idx(15)
push "\x1b[m\x1b[37;1m"
  ?pen bold = on
  ?pen foreground = idx(15)

-- Super/Subscript
push "\x1b[73m"
  ?pen small = on
  ?pen baseline = raise
push "\x1b[74m"
  ?pen small = on
  ?pen baseline = lower
push "\x1b[75m"
  ?pen small = off
  ?pen baseline = normal

-- DECSTR resets pen attributes
push "\x1b[1;4m"
  ?pen bold = on
  ?pen underline = 1
push "\x1b[!p"
  ?pen bold = off
  ?pen underline = 0
